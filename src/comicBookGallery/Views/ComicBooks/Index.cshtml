@model comicBookGallery.Models.ComicBook[]
@{
    ViewBag.Title = "Index";
}

<h2>@ViewBag.Title</h2>

<div class="row">
    @foreach (var comicBooks in Model)
    {
        <div class="col-md-3">
            <h4>@comicBooks.DisplayText</h4>
            <img src="/Images/@comicBooks.CoverImagePicture"
                 alt="@comicBooks.DisplayText"
                 class="img-responsive" />
        </div>
    }     
</div>

